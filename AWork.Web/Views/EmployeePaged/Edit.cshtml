@model AWork.Contracts.Dto.HumanResources.EmployeeEditGroupDto

@{
    ViewData["Title"] = "Edit";
}

<div class="container p-3 my-3">
    <div class="card">
        <div class="card-header">
            <h3 class="text-center mb-3">EDIT EMPLOYEE</h3>
        </div>
        <div class="card-body">
            <form class="row g-3" method="post" asp-controller="EmployeePaged" asp-action="Edit">
                @*Employee*@

                @Html.HiddenFor(Model => Model.employeeDtos.LoginId)
                @Html.HiddenFor(Model => Model.employeeDtos.BusinessEntityId)
                @Html.HiddenFor(Model => Model.employeeDtos.SalariedFlag)
                @Html.HiddenFor(Model => Model.employeeDtos.CurrentFlag)
                @Html.HiddenFor(Model => Model.employeeDtos.Rowguid)

                @*Employee Pay History*@

                @Html.HiddenFor(Model => Model.employeeDepartmentDtos.BusinessEntityId)
                @Html.HiddenFor(Model => Model.employeePHDtos.BusinessEntityId)

                <div class="form-group col-6">
                    <label asp-for="employeeDtos.NationalIdnumber" class="control-label"></label>
                    <input asp-for="employeeDtos.NationalIdnumber" class="form-control" />
                    <span asp-validation-for="employeeDtos.NationalIdnumber" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="employeeDtos.BirthDate" class="control-label"></label>
                    <input asp-for="employeeDtos.BirthDate" class="form-control" />
                    <span asp-validation-for="employeeDtos.BirthDate" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    @Html.LabelFor(model => model.employeeDtos.MaritalStatus, htmlAttributes: new{@class ="form-label"})
                    @Html.DropDownListFor(model => model.employeeDtos.MaritalStatus, new List<SelectListItem>
                    {
                    new SelectListItem{ Text="Married", Value = "M" },
                    new SelectListItem{ Text="Single", Value = "S" }},
                    "Select your type", htmlAttributes: new { @class = "form-control" })

                </div>
                <div class="form-group col-6">
                    @Html.LabelFor(model => model.employeeDtos.Gender, htmlAttributes: new{@class ="form-label"})
                    @Html.DropDownListFor(model => model.employeeDtos.Gender, new List<SelectListItem>
                    {
                    new SelectListItem{ Text="Male", Value = "M" },
                    new SelectListItem{ Text="Female", Value = "F" }},
                    "Select your type", htmlAttributes: new { @class = "form-control" })

                </div>
                <div class="form-group col-4">
                    <label asp-for="employeeDtos.HireDate" class="control-label"></label>
                    <input asp-for="employeeDtos.HireDate" class="form-control" />
                    <span asp-validation-for="employeeDtos.HireDate" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="employeePHDtos.Rate" class="control-label"></label>
                    <input asp-for="employeePHDtos.Rate" class="form-control" />
                    <span asp-validation-for="employeePHDtos.Rate" class="text-danger"></span>
                </div>
                <div class="form-group col-4">
                    <label asp-for="employeePHDtos.PayFrequency" class="control-label"></label>
                    <input asp-for="employeePHDtos.PayFrequency" class="form-control"/>
                    <span asp-validation-for="employeePHDtos.PayFrequency" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="employeeDtos.VacationHours" class="control-label"></label>
                    <input asp-for="employeeDtos.VacationHours" class="form-control" />
                    <span asp-validation-for="employeeDtos.VacationHours" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="employeeDtos.SickLeaveHours" class="control-label"></label>
                    <input asp-for="employeeDtos.SickLeaveHours" class="form-control" />
                    <span asp-validation-for="employeeDtos.SickLeaveHours" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Employee JobTitle</label>
                    <div class="input-group input-group-merge">
                        @Html.DropDownList("employeeDtos.JobTitle",ViewBag.JobTitle,Model.employeeDtos.JobTitle,
                        new{@class="form-control"})
                    </div>
                </div>
                
                <div class="col-md-6">
                    <label class="form-label">Employee Departement</label>
                    <div class="input-group input-group-merge">
                        @Html.DropDownList("employeeDepartmentDtos.DepartmentId",ViewBag.DepartementId,Model.employeeDepartmentDtos.DepartmentId.ToString(),
                        new{@class="form-control"})
                    </div>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Employee BusinessEntity</label>
                    <div class="input-group input-group-merge">
                        @Html.DropDownList("employeeDepartmentDtos.ShiftId",ViewBag.ShiftoId,Model.employeeDepartmentDtos.ShiftId.ToString(),
                        new{@class="form-control"})
                    </div>
                </div>

                <br />

                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Update</button>
                    <a asp-action="Index">
                        <input type="button" class="btn btn-secondary" value="Back" />
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>




