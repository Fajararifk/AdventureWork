@model AWork.Contracts.Dto.Sales.Store.StoreDto

@{
    ViewData["Title"] = "Details";
}

<div class="container p-3 my-3">
    <div class="card">
        <div class="card-header">
            <h3 class="text-center mb-3">Store Details</h3>
        </div>
        <div class="card-body">
            <form class="row g-3">
                <div class="col-md-11">
                    <div class="form-group">
                        <label for="inputPassword4" class="form-label">StoreID</label>
                        <div class="input-group input-group-merge">
                            @Html.TextBoxFor(Model => Model.BusinessEntityId,
                            new{@class="form-control", @readonly="readonly"})
                        </div>
                    </div>
                </div>
                <br>
                <div class="row g-3">
                    <div class="form-group">
                        <label for="inputPassword4" class="form-label">Store Name</label>
                        <div class="input-group input-group-merge">
                            @Html.TextBoxFor(model => model.Name,
                            new{@class="form-control", @readonly="readonly"})
                        </div>
                    </div>
                    <br>
                </div>
                <div class="row g-3">
                    <div class="form-group">
                        <label for="inputPassword4" class="form-label">Modified Data</label>
                        <div class="input-group input-group-merge">
                            @Html.TextBoxFor(model => model.ModifiedDate,
                            new{@class="form-control", @readonly="readonly"})
                        </div>
                    </div>
                </div>
            </form>
            <br />
            <button type="submit" class="btn btn-primary">Edit</button>
            <a asp-action="Index">
                <input type="button" class="btn btn-secondary" value="Back" />
            </a>
        </div>
    </div>
</div>

