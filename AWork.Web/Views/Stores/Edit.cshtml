@model AWork.Contracts.Dto.Sales.Store.StoreDto

@{
    ViewData["Title"] = "Edit";
}

@using (Html.BeginForm("EditStore", "Stores", FormMethod.Post))
{
    @Html.HiddenFor(model => model.BusinessEntityId)
    <div class="container p-3 my-3">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center mb-3">EDIT STORE</h3>
            </div>
            <div class="card-body">
                <form class="row g-3">
                    <div class="col-md-11">
                        <div class="form-group">
                            <label for="inputPassword4" class="form-label">StoreID</label>
                            <div class="input-group input-group-merge">
                                @Html.TextBoxFor(Model => Model.BusinessEntityId,
                            new{@class="form-control", @readonly="readonly"})
                            </div>
                        </div>

                    </div>
                    <br>
                    <div class="row g-3">
                        <div class="col-md-3">
                            <label for="inputPassword4" class="form-label">Store Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <br>

                    </div>
                </form>
                <br />
                <button type="submit" class="btn btn-primary">Edit</button>
                <a asp-action="Index">
                    <input type="button" class="btn btn-secondary" value="Back" />
                </a>
            </div>
        </div>
    </div>
}
